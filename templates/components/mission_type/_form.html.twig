<div class="container text-center">
    <div class="container text-left">
        {# ********************* Les messages Flashe ******************* #}
        {% for message in app.flashes('success') %}
            <div class="flash-notice text-center">
                <div class="alert alert-success">{{ message }}</div>
            </div>
        {% endfor %}
        {% for message in app.flashes('alert') %}
            <div class="flash-notice text-center">
                <div class="alert alert-danger">{{ message }}</div>
            </div>
        {% endfor %}
        {# ********************* Les messages erreurs validator ******************* #}
        {% for error in errors %}
            <div class="alert alert-danger text-center">
                {{ error.message }}
            </div>
        {% endfor %}
        {{ form_start(form) }}
        {{ form_widget(form.name , {'attr': {'placeholder': 'Ajouter un nouveau type de mission'}}) }}
        <button class="btn btn-primary mt-2">{% block btn %}{{ name }}{% endblock%} </button>
        {{ form_end(form) }}
    </div>
</div>


