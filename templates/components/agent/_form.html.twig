<div class="container text-center">
    <div class="container text-left">
        {{ form_start(form) }}
        {{ form_label(form, 'Le nom')}}
        {{ form_widget(form.firstName , {'attr': {'placeholder': 'Ajouter un nom','class':'form-control mb-2'}}) }}
        {{ form_label(form, 'Le prénom')}}
        {{ form_widget(form.lastName , {'attr': {'placeholder': 'Ajouter un prénom','class':'form-control mb-2'}}) }}
        {{ form_label(form, 'Date de naissance')}}
        {{ form_widget(form.birthDay , {'attr': {'class':'form-control mb-2'}}) }}
        {{ form_label(form, 'Code')}}
        {{ form_widget(form.code , {'attr': {'placeholder': 'Ajouter un code','class':'form-control mb-2'}}) }}
        {{ form_label(form, 'Nationalité')}}
        {{ form_widget(form.nationality , {'attr': {'class':'form-control mb-2'}}) }}
        {{ form_label(form, 'Spécialité')}}

        {{ form_widget(form.agentSpeciality , {'attr': {'class':'d-flex align-content-center flex-wrap mb-2'}}) }}
        <a href="/speciality" class="btn btn-success mb-2" style="min-width: 12rem">Ajouter une spécialité</a><br>
        <button class="btn btn-primary mt-2 mb-5">{% block btn %}{{ name }}{% endblock%} </button>
        {{ form_end(form) }}
    </div>
</div>


